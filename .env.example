# Database Configuration
MYSQL_DATABASE=bookmyhotel
MYSQL_ROOT_PASSWORD=password
MYSQL_USER=app
MYSQL_PASSWORD=password

# Backend Configuration
SPRING_PROFILES_ACTIVE=docker
APP_JWT_SECRET=your-very-long-secret-key-that-should-be-at-least-256-bits-long-for-security-replace-in-production
APP_JWT_EXPIRATION=86400000

# Microsoft Graph OAuth2 Configuration
# Azure AD Application credentials for Microsoft Graph API email service
MICROSOFT_GRAPH_CLIENT_ID=your-azure-ad-client-id-here
MICROSOFT_GRAPH_TENANT_ID=your-azure-ad-tenant-id-here
MICROSOFT_GRAPH_CLIENT_SECRET=your-azure-ad-client-secret-here

# Email Configuration
APP_EMAIL_FROM=noreply@your-domain.com
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your-email@gmail.com
SPRING_MAIL_PASSWORD=your-app-password

# Stripe Configuration (Get from Stripe Dashboard)
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Development Tools
PHPMYADMIN_ENABLED=true
MONITORING_ENABLED=false
