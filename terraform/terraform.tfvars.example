# BookMyHotel Terraform Configuration Values
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region = "us-east-1"
environment = "test"

# EC2 Configuration  
instance_type = "t3.small"
root_volume_size = 30

# SSH Configuration - IMPORTANT: Change this to your IP address for security
ssh_cidr_block = "0.0.0.0/0"  # Change to "YOUR_IP/32" for better security

# Your SSH public key - Generate with: ssh-keygen -t rsa -b 4096
# Then copy content of ~/.ssh/id_rsa.pub
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-public-key-here"

# Domain Configuration
domain_name = "www.251solutions.com"

# Application Secrets - Consider using AWS Secrets Manager for production
mysql_root_password = "BookMyHotel@2024!"
jwt_secret_key = "bookmyhotelverylongsecretkeythatisatleast512bitslongforsecuritywithjwtandhs512algorithmthisisasupersecurekey2024bookmyhotelapp"

# Microsoft Graph OAuth2 (replace with your values)
microsoft_graph_client_id = "REPLACE_WITH_YOUR_CLIENT_ID"
microsoft_graph_tenant_id = "REPLACE_WITH_YOUR_TENANT_ID"
microsoft_graph_client_secret = "REPLACE_WITH_YOUR_CLIENT_SECRET"

# Stripe Configuration (replace with your actual keys)
stripe_secret_key = "sk_test_your_stripe_secret_key_here"

# Email Configuration
app_email_from = "noreply@251solutions.com"
